<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".autro_main">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/toolbar_main"
        android:id="@+id/toolbarek"/>

    <TextView
        android:id="@+id/autorek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:gravity="center_horizontal"
        android:text="Autor: Mikołaj Kmieciak \n
                      instagram: kmiecivk"/>

        <Button
            android:layout_margin="20dp"
            android:background="@drawable/boarderss5"
            android:onClick="wykonaj"
            android:textSize="20dp"
            android:text="Informacje początkowe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <Button
            android:layout_margin="20dp"
            android:background="@drawable/boarderss5"
            android:onClick="dodatki"
            android:textSize="20dp"
            android:text="Dodatki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</LinearLayout>

</ScrollView>